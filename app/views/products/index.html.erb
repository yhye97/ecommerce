<h1>Products</h1>
<% if admin_signed_in?%>
<%= link_to "New product", new_product_path %>
<%end%>

<div class="col-md-6 col-md-offset-3">
	<table class="table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Price</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
				<tr>
					<td><%= product.title %></td>
					<td><%= product.price %></td>
					<td>
					<% if admin_signed_in?%>	
						<%= link_to "Edit", edit_product_path(product) %>
						<%= link_to "Delete", product_path(product), method: :delete %>
					<%end%>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>